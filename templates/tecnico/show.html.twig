{% block main %}

    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-8">
                <p><strong>Académico:</strong> {{ academico.nombre }} {{ academico.apellido }}</p>
                <h3>Informe {{ actual }}</h3>
            </div>
            <div class="col-xl-4">
                <p class="text-right"><img class="right" src="{{ asset('img/ccm-bn.png') }}" width="165px" height="50px" /></p>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">

                {% if tecnicos.informeAnual |length == 0 %}
                    <p class="text-danger">No se ha registrado información</p>
                {% else %}
                    {{ tecnicos.informeAnual| nl2br }}<br><br>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <h3>Plan de trabajo {{ siguiente }}</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                {% if tecnicos.plan |length == 0 %}
                    <p class="text-danger">No se ha registrado información</p>
                {% else %}
                    {{ tecnicos.plan| nl2br }}<br><br>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}